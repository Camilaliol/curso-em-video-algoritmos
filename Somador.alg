algoritmo "Somador"

var
n,s: Inteiro
resp: caractere

inicio
    S < 0
    resp <- "S"
    enquanto (resp = "S") faca
        Escreval("Digite um valor: ")
        Leia(N)
        S <- s + n
        Escreval("Você quer continuar ? |S/N|")
        Leia (resp)
    FimEnquanto
    Escreval("A soma  de todos os valores é: ", s)
fimalgoritmo